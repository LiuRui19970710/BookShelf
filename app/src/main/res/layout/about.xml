<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarabout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="@android:color/white"
        android:background="@color/colorPrimary"
        app:title="关于"></android.support.v7.widget.Toolbar>
    <TextView
        android:layout_marginLeft="14dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="关于"
        android:textSize="20dp"
        android:textColor="@color/rad"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="BookShelf"
        android:layout_marginLeft="14dip"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1.3(6)"
        android:textSize="15dp"
        android:layout_marginLeft="14dip"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#ffe0e0e0"
        android:layout_marginTop="10dp">
    </View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="评分"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginLeft="14dip"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="如果觉得好用，请为我们打满分！"
        android:layout_marginLeft="14dip"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#ffe0e0e0"
        android:layout_marginTop="10dp">
    </View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="捐赠"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginLeft="14dip"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="非常欢迎您的捐赠"
        android:layout_marginLeft="14dip"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#ffe0e0e0"
        android:layout_marginTop="10dp">
    </View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开源项目"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginLeft="14dip"
        android:clickable="true"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="https://github.com/lql1997/BookShelf"
        android:layout_marginLeft="14dip"
        android:clickable="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#ffe0e0e0"
        android:layout_marginTop="10dp">
    </View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="反馈"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginLeft="14dip"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送建议或反馈"
        android:layout_marginLeft="14dip"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#ffe0e0e0"
        android:layout_marginTop="10dp">
    </View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开源许可"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginLeft="14dip"
        android:layout_marginTop="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#ffe0e0e0"
        android:layout_marginTop="10dp">
    </View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用条款"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginLeft="14dip"
        android:layout_marginTop="10dp"/>

</LinearLayout>